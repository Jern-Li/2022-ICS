 * conditional - same as x ? y : z 
 *   Example: conditional(2,4,5) = 4
 *   Legal ops: ! ~ & ^ | + << >>
 *   Max ops: 16
 *   Rating: 3
 */
int conditional(int x, int y, int z) {
    /*exploit the ability of | to compute like if, and the ability of & with 0xffff to save the value*/
    int option1,option2;
    option1=((!x)<<31)>>31&y;
    option2=(((!x)>>1)<<31)>>31&z;
    return option1|option2;
}
