#include<stdio.h>
#include<math.h>
/*
*Return 1 when x can be represented as an n-bit,2's-complement number
*0 otherwise
*Assume 1<=n<=w
*/
/*推测题意为判断x是否在n位补码可表示的正负数的范围内*/ 
int fits_bits(int x,int n)
{
	/*int w=8*sizeof(int);*/
	int max=pow(2,n-1)-1;
	int min=-pow(2,n-1);
	if(x<=max&&x>=min)
	return 1;
	else 
	return 0;
	
}

/*以下用于测试*/ 
int main()
{
	printf("%d\n",fits_bits(52,8));
	printf("%d\n",fits_bits(127,8));
	printf("%d\n",fits_bits(200,8));
	printf("%d\n",fits_bits(-129,8));
}
