#include<stdio.h>
int divide_power2(int x,int k)
{
	/*题意已假设0<=k<=w-1，无需考虑k为非整数时除法转为乘法的情况
	*亦无需考虑乘法要mod pow(2,w)的情况*/ 
	int result;
	if(x>=0)
	result=x>>k;
	else
	result=(x+(1<<k)-1)>>k;
	printf("计算结果为： %d",result);
	return;
}

int main()
{
	int x,k;
	printf("请输入目标x与k： ");
	scanf("%d%d",&x,&k);
	divide_power2(x,k);
	return;
}
